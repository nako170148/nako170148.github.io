---
const { title = 'Portfolio', description = 'Engineer Portfolio' } = Astro.props;
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <style>
      /* === White & Gray theme === */
      :root{
        --bg:#ffffff;         /* ページ背景 白 */
        --text:#1f2937;       /* 文字色 (gray-800) */
        --muted:#6b7280;      /* 補助文字色 (gray-500/600) */
        --panel:#f7f7f8;      /* カード/セクション 背景 */
        --line:#d1d5db;       /* 境界線 (gray-200) */
        --link:#4b5563;       /* リンク色 */
        --link-hover:#111827; /* リンクhover */
        --header-footer:#e5e7eb; /* header/footer グレー背景 (gray-100) */
      }

      *{box-sizing:border-box}
      body{
        margin:0;
        background:var(--bg);
        color:var(--text);
        font-family:system-ui,-apple-system,Segoe UI,Roboto,"Hiragino Kaku Gothic ProN","Noto Sans JP",sans-serif;
        line-height:1.65;
      }

      .container{width:min(1100px,92%);margin:0 auto}
      .content{padding:32px 0 64px}

      header, footer{
        background:var(--header-footer);
        color:var(--text);
        border-bottom:1px solid var(--line);
      }
      footer{
        border-top:1px solid var(--line);
        border-bottom:none;
        color:var(--muted);
      }

      a{color:var(--link);text-decoration:none}
      a:hover{color:var(--link-hover)}

      nav a{margin-left:16px}

      h1,h2,h3{color:#374151}
      h2{font-size:1.25rem;margin:0 0 .5rem}
      section + section{margin-top:2rem}

      .card{
        background:var(--panel);
        border:1px solid var(--line);
        border-radius:12px;
        padding:24px;
      }

      .muted{color:var(--muted)}
    </style>
  </head>
  <body>
    <header>
      <div class="container" style="display:flex;align-items:center;justify-content:space-between;padding:12px 0;">
        <a href="/" style="font-weight:800;letter-spacing:.4px;color:var(--link-hover);text-decoration:none">My Portfolio</a>
        <nav>
          <a href="/projects">Works</a>
          <a href="/about">About</a>
          <a href="https://github.com/nako170148" target="_blank" rel="noreferrer">GitHub</a>
        </nav>
      </div>
    </header>

    <main class="container content">
      <slot />
    </main>

    <footer>
      <div class="container" style="padding:24px 0;">
        © {new Date().getFullYear()} Yui Nagano
      </div>
    </footer>
  </body>
</html>